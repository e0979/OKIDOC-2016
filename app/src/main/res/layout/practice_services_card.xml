<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:layout_margin="15sp"
        android:background="@color/okidoc_blue"
        android:elevation="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El paciente Juan viene a consulta por..."
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:textSize="16sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="&quot;Primera Vez&quot;"
            android:textColorHint="@color/fifty_white"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:id="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="cancelará Bs."
            android:id="@+id/textView3"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <EditText
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignBaseline="@+id/textView3"
            android:textColor="@color/white"
            android:hint="4000"
            android:textColorHint="@color/fifty_white"
            android:textAlignment="textEnd" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="y estará aproximadamente"
            android:id="@+id/textView4"
            android:layout_below="@+id/editText2"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <EditText
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_alignBaseline="@+id/textView4"
            android:textColor="@color/white"
            android:hint="00:30"
            android:textColorHint="@color/fifty_white"
            android:inputType="time"
            android:textAlignment="textEnd" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="min en consulta"
            android:id="@+id/textView5"
            android:layout_below="@+id/editText3"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>