<?xml version="1.0" encoding="utf-8"?>
    <HorizontalScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/data_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollIndicators="right">
        <LinearLayout
            android:id="@+id/innerLay"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/okidoc_green">

            <LinearLayout
                android:layout_width="@dimen/profile_data_width"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/profile_data_padding"
                android:paddingBottom="@dimen/profile_data_padding">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_gender">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_info"
                        android:text=""
                        android:textAllCaps="true"
                        android:id="@+id/gender"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_title"
                        android:text="SEXO"
                        android:textAllCaps="true"
                        android:layout_alignBottom="@+id/gender"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/label_gender" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/profile_data_width"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/profile_data_padding"
                android:paddingBottom="@dimen/profile_data_padding">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_age">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_info"
                        android:text=""
                        android:textAllCaps="true"
                        android:id="@+id/age"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_title"
                        android:text="EDAD"
                        android:textAllCaps="true"
                        android:layout_alignBottom="@+id/age"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/label_age" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/profile_data_width"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/profile_data_padding"
                android:paddingBottom="@dimen/profile_data_padding">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_height">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_info"
                        android:text=""
                        android:textAllCaps="true"
                        android:id="@+id/height"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_title"
                        android:text="ESTATURA"
                        android:textAllCaps="true"
                        android:layout_alignBottom="@+id/height"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/label_height" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/profile_data_width"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/profile_data_padding"
                android:paddingBottom="@dimen/profile_data_padding">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_weight">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_info"
                        android:text=""
                        android:textAllCaps="true"
                        android:id="@+id/weight"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_title"
                        android:text="PESO"
                        android:textAllCaps="true"
                        android:layout_alignBottom="@+id/weight"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/label_weight" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/profile_data_width"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/profile_data_padding"
                android:paddingBottom="@dimen/profile_data_padding">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_bloodtype">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_info"
                        android:text=""
                        android:textAllCaps="true"
                        android:id="@+id/bloodtype"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/profile_data_title"
                        android:text="sangre"
                        android:textAllCaps="true"
                        android:layout_alignBottom="@+id/bloodtype"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/label_bloodtype" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>