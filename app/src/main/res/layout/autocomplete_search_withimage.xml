<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textAlignment="gravity"
    android:background="@drawable/border_bottom">
    <ImageView
        android:id="@+id/photoArea"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/default_male"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/textArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the name"
        android:layout_toRightOf="@+id/photoArea"
        android:layout_centerVertical="true"
        android:textColor="@color/okidoc_gray"
        android:textStyle="italic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/patient_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="2"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="3"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_id_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="4"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_birth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="5"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/hidden_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/okidoc_gray"
            android:text="6"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>